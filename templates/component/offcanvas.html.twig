{% block offcanvas %}
	{% if not id %}
		{% set id = random() %}
	{% endif %}

	<div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="{{ id }}" aria-labelledby="{{ id }}Label">
		<div class="offcanvas-header">
			<h5 class="offcanvas-title" id="{{ id }}Label">{{ title|default("Title") }}</h5>
			<button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
		</div>
		<div class="offcanvas-body d-flex flex-column">
			<div class="form-floating mb-3" style="flex: 1">
				<textarea class="form-control h-100" readonly="true" id="msgs" style="resize: none"></textarea>
				<label for="msgs">Comments</label>
			</div>

			<div class="input-group">
				<div class="form-floating">
					<input type="text" class="form-control" id="msg" placeholder="Username">
					<label for="msg">Messaggio</label>
				</div>
				<button class="input-group-text"><img src="/imgs/send.svg" alt="" /></button>
			</div>
		</div>
	</div>
{% endblock %}
