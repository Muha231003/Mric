{% extends "page/index.html.twig" %}

{% block title %}MRIC - Crea una partita{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script type="text/javascript" src="{{ asset("shaker.js") }}" defer></script>
{% endblock %}

{% block main %}
	<div class="card shadow w-50">
		<img class="card-img-top mt-4 shake-me-please" height="75px" src="/imgs/trophy.svg" alt=""/>
		<div class="card-body">
			<h5 class="card-title text-center">Crea una nuova partita</h5>

			<form class="d-flex flex-column gap-3" action="{{ path("app.create-submit") }}" method="POST">
				<div class="form-group">
					<label for="luogo">Luogo</label>
					<input type="text" class="form-control" id="luogo" name="luogo" required placeholder="Luogo" maxlength="20">
				</div>
				<div class="form-group">
					<label for="squadradicasa">Squadra di casa</label>
					<input type="text" class="form-control" id="squadradicasa" name="squadradicasa" required placeholder="Squadra di casa" maxlength="25">
				</div>
				<div class="form-group">
					<label for="squadra ospite">Squadra ospite</label>
					<input type="text" class="form-control" id="squadraospite" name="squadraospite" required placeholder="Squadra ospite" maxlength="20">
				</div>
				<div class="form-group">
					<label for="arbitro">Arbitro</label>
					<input type="text" class="form-control" id="arbitro" name="arbitro" required placeholder="Pierluigi Collina" maxlength="20">
				</div>
				<div class="form-group">
					<label for="dataeora">Data e ora</label>
					<input type="datetime-local" min="" class="form-control" id="dataeora" name="dataeora" required placeholder="Data e ora">
				</div>
				<button type="submit" class="btn btn-primary shake-trigger">Conferma</button>
			</form>
		</div>
	</div>
{% endblock %}
